@model TropicalServerApp.Models.UserLogin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>ForgotUsername</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Login")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <h1>@ViewBag.test</h1>

    <div id="container">

        <div>

            <div id="header">
                <img height="100" src="@Url.Content("~/Images/Header.jpg")" />

            </div>

            <div id="BodyDetail">
                <label id="Loginlbl">Please input your UserID</label>
                <form id="loginBox" action="@Url.Action("SendEmail", "Login")" method="post">
                    <label id="useridlbl">UserID:</label>
                    <input name="UserID" id="useridtextbox" type="text" required /><br />
                    <div id="login">
                        <div id="loginButton">
                            <input id="LoginBtn_1" type="submit" value="Submit" />
                        </div>
                    </div>
                </form>

                <div id="errorBox">
                    <label id="errorlbl">@Html.ValidationSummary()</label>
                </div>
                @*Login Box  Here *@
            </div>
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

